FROM {{ namespace }}/{{ image_prefix }}neutron-base:{{ tag }}
MAINTAINER {{ maintainer }}

{% block neutron_server_header %}{% endblock %}

{% import "macros.j2" as macros with context %}

{% if install_type == 'binary' %}
    {% if base_distro in ['centos', 'oraclelinux', 'rhel'] %}

        {% set neutron_server_packages = [
            'openstack-neutron-lbaas',
            'openstack-neutron-vpnaas',
            'python-pip',
            'git',
        ] %}

    {% elif base_distro in ['ubuntu'] %}

        {% set neutron_server_packages = [
            'neutron-lbaasv2-agent',
            'python-neutron-lbaas',
            'python-neutron-vpnaas',
            'python-pip',
            'git',
        ] %}

    {% endif %}
{% endif %}

{{ macros.install_packages(neutron_server_packages | customizable("packages")) }}

ADD plugins-archive /
COPY extend_start.sh /usr/local/bin/kolla_neutron_extend_start
RUN chmod 755 /usr/local/bin/kolla_neutron_extend_start \
    && if [ "$(ls /plugins)" ]; then \
           pip --no-cache-dir install --upgrade -c requirements/upper-constraints.txt /plugins/*; \
       fi

{% block neutron_server_footer %}

{% set driver_git_repo = "https://github.com/F5Networks/f5-openstack-lbaasv2-driver" %}
{% set driver_tag = "v10.1.0" %}

RUN pip install git+{{ driver_git_repo }}@{{ driver_tag }} && \
  curl -L -o /tmp/f5.tgz https://github.com/F5Networks/neutron-lbaas/releases/download/v10.0.0/f5.tgz && \
  tar xvf /tmp/f5.tgz -C /usr/lib/python2.7/site-packages/neutron_lbaas/drivers/ && \
  rm -rf /tmp/f5.tgz

{% endblock %}

{% block footer %}{% endblock %}

USER neutron
